@model ICollection<AuthenticationClientData>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">

            <h3>Add an external login</h3><hr class="black" />
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset id="socialLoginList">
                            @foreach (AuthenticationClientData p in Model)
                            {
                                <button type="submit" class="btn btn-info" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">@p.DisplayName</button>
                            }
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>

}
