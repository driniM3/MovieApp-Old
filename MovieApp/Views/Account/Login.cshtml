@model MovieApp.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="row">
    <div class="col-lg-9 col-md-10 col-lg-offset-3 col-md-offset-2">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
        </hgroup>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 col-md-8 col-lg-offset-3 col-md-offset-2">
        <div class="well">
            <section id="loginForm">
                <h2>Use a local account to log in.</h2>
                @using (Html.BeginForm(new { @class = "form-horizontal", ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <div class="form-group">

                            @Html.LabelFor(m => m.UserName, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-9">

                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(m => m.Password, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-9">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)

                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="submit" style="float: right" class="btn btn-primary" value="Log in" />
                            </div>
                        </div>
                    </fieldset>

                }               

            </section>
            <section class="social" id="socialLoginForm">
                    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
                </section>
        </div>
    </div>
    <div class="col-lg-3 col-md-2"></div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
